<div class="book modal" onClick="closeModal();"
	data-book-name="<%= c.title %>"
>
	<div class="modal-content">
		<div class="modal-header">
			<button class="modal-close" type="button" onClick="closeModal();">X</button>
		</div>
		<div class="modal-body">
			<div class="modal-spinner">
				<img  src="img/spinner3.gif"
							width="24px" height="24px"
				/>
			</div>
			<iframe

				width="<%= c.videoWidth %>"
				height="<%= c.videoHeight %>"
				src="https://www.youtube.com/embed/<%=c.videoId%>"
				frameborder="0"
				allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
			</iframe>

		</div>
	</div>

	</div>


</div>
